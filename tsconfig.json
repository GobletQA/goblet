{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./dist",
    "noEmit": false,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./repos/shared/src/types",
      "./node_modules/@types"
    ],
    "paths": {
      "@GTasks": ["./tasks"],
      "@GTasks/*": ["./tasks/*"],
      "@gobletqa/screencast": [ "./repos/screencast/src" ],
      "@gobletqa/screencast/*": [ "./repos/screencast/src/*" ],
      "@gobletqa/shared": [ "./repos/shared/src" ],
      "@gobletqa/shared/*": [ "./repos/shared/src/*" ],
    }
  },
  "exclude": [
    "tasks/goblet.ts",
    "node_modules",
    "bundle",
    ".git",
    ".husky",
    ".firebase",
    "certs",
    "repos/**/dist",
    "docs",
    "logs",
    "scripts",
    "temp",
  ]
}