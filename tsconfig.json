{
  "parserOptions": {
    "extraFileExtensions": ["json"]
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "outDir": "./dist",
    "noEmit": false,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {

      "@GEX/constants": ["repos/exam/src/constants"],
      "@GEX/constants/*": ["repos/exam/src/constants/*"],
      "@GEX/services": ["repos/exam/src/services"],
      "@GEX/services/*": ["repos/exam/src/services/*"],
      "@GEX/types": ["repos/exam/src/types"],
      "@GEX/types/*": ["repos/exam/src/types/*"],
      "@GEX/utils": ["repos/exam/src/utils"],
      "@GEX/utils/*": ["repos/exam/src/utils/*"],
      "@GEX": ["repos/exam/src"],
      "@GEX/*": ["repos/exam/src/*"],
      "@GEXRoot": ["repos/exam"],


      "@GTasks": ["./tasks"],
      "@GTasks/*": ["./tasks/*"],
      "@GLogs/*": ["../../logs/*"],
      "@GRepos/*": ["../../repos/*"],
      "@GConfigs/*": ["../../configs/*"],
      "@GEnv": ["../shared/src/environment/environment"],
      "@GEnv/values": ["../shared/src/environment/values"],
      "@GEnv/secrets": ["../shared/src/environment/secrets"],
      "@GEnvironment": ["../shared/src/environment/environment"],
      "@GEnvironment/values": ["../shared/src/environment/values"],
      "@GEnvironment/secrets": ["../shared/src/environment/secrets"],
      "@gobletqa/screencast": [ "./repos/screencast/src" ],
      "@gobletqa/screencast/*": [ "./repos/screencast/src/*" ],
      "@gobletqa/shared": [ "./repos/shared/src" ],
      "@gobletqa/shared/*": [ "./repos/shared/src/*" ],
      "@gobletqa/test-utils": [ "./repos/testUtils/src" ],
      "@gobletqa/test-utils/*": [ "./repos/testUtils/src/*" ]
    }
  },
  "exclude": [
    "tasks/goblet.ts",
    "node_modules",
    "bundle",
    ".git",
    ".husky",
    ".firebase",
    "certs",
    "repos/**/dist",
    "repos/**/build",
    "repos/**/node_modules",
    "docs",
    "logs",
    "scripts",
    "temp",
  ]
}