{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@Configs": ["configs"],
      "@Libs": ["src/libs"],
      "@Utils": ["src/utils"],
      "@Sockr": ["src/sockr"],
      "@Endpoints": ["src/endpoints"],
      "@Middleware": ["src/middleware"],
      "@GBK": ["src"],
      "@GBKRoot": ["./"],
      "@gobletqa/shared": ["../shared/src"],
      "@gobletqa/shared/*": ["../shared/src/*"],
      "@gobletqa/screencast": ["../screencast/src"],
      "@gobletqa/screencast/*": ["../screencast/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}