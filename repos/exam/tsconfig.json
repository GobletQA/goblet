{
  "extends": "../../tsconfig.json",
  "parserOptions": {
    "extraFileExtensions": ["json"]
  },
  "compilerOptions": {
    "outDir": "./dist"
  },
  "include": [
    "src",
    "configs",
    "../../",
    "../../configs",
    "../shared/src"
  ],
  "exclude": [
    ".git",
    ".npm",
    ".app-cache",
    ".npm-tmp",
    "build",
    "build*",
    "node_modules",
    "dist",
    "dist*",
    "node_modules",
    "**/dist/*",
    "**/build/*",
    "**/node_modules/*",
  ]
}
