{
  "name": "@gobletqa/screencast",
  "version": "0.0.0",
  "description": "VNC Screencast Backend API and Servers",
  "main": "index.js",
  "author": "Lance Tipton",
  "license": "MIT",
  "private": true,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "url": "git+https://github.com/GobletQA/goblet.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/GobletQA/goblet/issues"
  },
  "scripts": {
    "build": "yarn build:docker",
    "build:docker": "yarn sc:build && yarn bs:build && yarn vnc:build && yarn sock:build",
    "clean": "yarn clean:dist; yarn clean:nm",
    "clean:dist": "rm -rf dist && mkdir dist && echo \"\" >> dist/.keep",
    "clean:full": "yarn clean; yarn install",
    "clean:nm": "rm -rf node_modules",
    "format": "yarn lint && yarn pretty",
    "json:rm": "dot-json package.json devDependencies -d",
    "lint": "eslint --color --cache --fix --quiet --ignore-path ../../.eslintignore --config ./configs/eslintrc.config.js",
    "pretty": "prettier --ignore-path ../../.prettierignore --config ./configs/prettier.config.js -w",

    "start": "yarn sc:start",
    "serve": "/bin/bash scripts/initialize.sh",

    "bs": "node --enable-source-maps -r esbuild-register dist/bs.js",
    "bs:build": "node --enable-source-maps -r esbuild-register configs/bs.build.config.ts",
    "bs:start": "node --enable-source-maps -r esbuild-register configs/bs.build.config.ts",

    "sc": "node --enable-source-maps -r esbuild-register dist/sc.js",
    "sc:build": "node --enable-source-maps -r esbuild-register configs/sc.build.config.ts",
    "sc:start": "node --enable-source-maps -r esbuild-register configs/sc.build.config.ts",

    "sock": "node --enable-source-maps -r esbuild-register dist/sock.js",
    "sock:build": "node --enable-source-maps -r esbuild-register configs/sock.build.config.ts",
    "sock:start": "node --enable-source-maps -r esbuild-register configs/sock.build.config.ts",

    "vnc": "node --enable-source-maps -r esbuild-register dist/vnc.js",
    "vnc:build": "node --enable-source-maps -r esbuild-register configs/vnc.build.config.ts",
    "vnc:start": "node --enable-source-maps -r esbuild-register configs/vnc.build.config.ts"
  },
  "dependencies": {
    "@gobletqa/shared": "*",
    "@keg-hub/jsutils": ">=9.6.1",
    "@keg-hub/parse-config": ">=2.1.0",
    "@keg-hub/spawn-cmd": ">=0.3.2",
    "@ltipton/parkin": "3.0.0-beta-5",
    "cross-spawn": "7.0.3",
    "expect": "*",
    "express": "*",
    "fs-extra": "10.1.0",
    "ghost-cursor-pw": "1.1.18",
    "playwright": "*",
    "socket.io": "*",
    "tail-file": "1.4.15"
  },
  "devDependencies": {
    "@ltipton/esdev": "*",
    "@types/debug": "4.1.5",
    "@types/express": "4.17.9",
    "@types/jest": "29.1.2",
    "@types/node": "16.11.0",
    "esbuild": "*",
    "esbuild-plugin-path-alias": "*",
    "esbuild-register": "*",
    "nodemon": "*"
  }
}
