{
  "compilerOptions": {
    "baseUrl": "./",
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "declaration": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "webworker"],
    
    "paths": {
      "@GBM/components": [ "./src/components" ],
      "@GBM/components/*": [ "./src/components/*" ],
      "@GBM/constants": [ "./src/constants" ],
      "@GBM/constants/*": [ "./src/constants/*" ],
      "@GBM/hooks": [ "./src/hooks" ],
      "@GBM/hooks/*": [ "./src/hooks/*" ],
      "@GBM/init": [ "./src/init" ],
      "@GBM/init/*": [ "./src/init/*" ],
      "@GBM/types": [ "./src/types" ],
      "@GBM/types/*": [ "./src/types/*" ],
      "@GBM/utils": [ "./src/utils" ],
      "@GBM/utils/*": [ "./src/utils/*" ],
      "@gobletqa/monaco": [ "../monaco/src" ],
      "@gobletqa/monaco/*": [ "../monaco/src/*" ],
      "@gobletqa/components": ["../components/src"],
      "@gobletqa/components/*": ["../components/src/*"],
      "@gobletqa/shared": [ "../shared/src" ],
      "@gobletqa/shared/*": [ "../shared/src/*" ],
      "GobletRoot": ["../../"]
    }
  },
  "include": [
    "./demo",
    "./src",
    "./configs"
  ],
  "exclude": ["node_modules"]
}
