{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@GSH/templates": ["src/templates"],
      "@GSH": ["src"],
      "@GSH/*": ["src/*"],
      "@GSHRoot": ["."],
      "@gobletqa/workflows": ["../workflows/src"],
      "@gobletqa/workflows/*": ["../workflows/src/*"],
      "@GLogs/*": ["../../logs/*"],
      "@GRepos/*": ["../../repos/*"],
      "@GConfigs/*": ["../../configs/*"],
      "@GEnvironment": ["../../scripts/environment"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
