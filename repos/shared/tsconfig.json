{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
      "../../node_modules/@types"
    ],
  },
  "include": [
    "src",
    "configs",
    "../../",
    "../../configs"
  ],
  "exclude": [
    ".git",
    ".npm",
    ".app-cache",
    ".npm-tmp",
    "build",
    "build*",
    "node_modules",
    "dist",
    "dist*",
    "node_modules",
    "**/dist/*",
    "**/build/*",
    "../../tasks",
    "../../container",
    "**/node_modules/*"
  ]
}
